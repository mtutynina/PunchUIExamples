@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Adress</th>
            <th>Company</th>
            <th>Salary</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Persons)
        {
            <tr>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Adress</td>
                <td>@p.Company</td>
                <td>@p.Salary</td>
                <td>@p.Email</td>
            </tr>
        }
    </tbody>
</table>
<pagination params="{ totalItems: @Model.Total,
            pageSize: @Model.PageSize,
            currentPage: @Model.CurrentPage,
            useQueryStringParameters: true}"></pagination>

@section Scripts {
    <script src="~/dist/vendor.js" asp-append-version="true"></script>
    <script src="~/dist/pagination-example.js" asp-append-version="true"></script>
}
