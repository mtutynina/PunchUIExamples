@page
@model PunchUIExamples.Pages.Razor.Pagination.CookiePageSizeModel
@{
    Layout = "_RazorPagesLayout";
    ViewData["Title"] = "Cookie page size";
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Adress</th>
            <th>Company</th>
            <th>Salary</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Persons)
        {
            <tr>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Address</td>
                <td>@p.Company</td>
                <td>@p.Salary</td>
                <td>@p.Email</td>
            </tr>
        }
    </tbody>
</table>
<pagination params="{ totalItems: @Model.Total,
            pageSize: @Model.PageSize,
            currentPage: @Model.CurrentPage,
            useCookieForPageSize: true,
            useQueryStringParameters: true}"></pagination>

@section Scripts {
    <script>
        punch.registerComponents();
        ko.applyBindings();
    </script>
}
